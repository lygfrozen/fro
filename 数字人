<body>
    <div class="container">
        <header>
            <h1>数字人智能体</h1>
            <p class="subtitle">AI助手 | 多模态交互 | 智能对话</p>
        </header>
        
        <div class="main-content">
            <section class="avatar-section">
                <div class="avatar-container">
                    <div class="avatar">AI</div>
                </div>
                <div class="status">
                    <div class="status-dot"></div>
                    <span>在线 - 准备为您服务</span>
                </div>
                <div class="controls">
                    <button id="voice-btn">语音对话</button>
                    <button id="reset-btn">重置对话</button>
                </div>
            </section>
            
            <section class="chat-section">
                <div class="chat-container" id="chat-container">
                    <div class="message agent-message">
                        您好！我是您的数字人智能体，很高兴为您服务。请问有什么可以帮助您的吗？
                    </div>
                </div>
                
                <div class="typing-indicator" id="typing-indicator">
                    <div class="typing-dots">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
                
                <div class="input-area">
                    <input type="text" id="user-input" placeholder="输入您的问题...">
                    <button class="send-btn" id="send-btn">➤</button>
                </div>
            </section>
        </div>
        
        <footer>
            <p>数字人智能体 v1.0 | 基于AI技术驱动 | 安全可靠</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chatContainer = document.getElementById('chat-container');
            const userInput = document.getElementById('user-input');
            const sendBtn = document.getElementById('send-btn');
            const voiceBtn = document.getElementById('voice-btn');
            const resetBtn = document.getElementById('reset-btn');
            const typingIndicator = document.getElementById('typing-indicator');
            
            // 预定义的回复库
            const responses = {
                '你好': '您好！很高兴见到您。我是您的数字人助手，有什么可以帮您的吗？',
                '你是谁': '我是一个基于人工智能技术的数字人智能体，专门设计来帮助用户解答问题、提供信息和协助完成任务。',
                '你会做什么': '我可以回答各种问题、提供信息、进行简单对话、帮助解决问题，甚至可以通过语音与您交流。',
                '时间': `现在是 ${new Date().toLocaleString('zh-CN')}`,
                '天气': '我目前无法获取实时天气信息，但您可以通过天气应用或网站查询最新天气情况。',
                '谢谢': '不客气！很高兴能帮助您。如果还有其他问题，请随时告诉我。',
                '再见': '再见！感谢您使用数字人智能体。如有需要，随时可以回来找我。'
            };
            
            // 发送消息函数
            function sendMessage() {
                const message = userInput.value.trim();
                if (message === '') return;
                
                // 添加用户消息到聊天窗口
                addMessage(message, 'user');
                userInput.value = '';
                
                // 显示输入中状态
                typingIndicator.style.display = 'block';
                
                // 模拟AI思考时间
                setTimeout(() => {
                    typingIndicator.style.display = 'none';
                    // 获取AI回复
                    const reply = getAIResponse(message);
                    addMessage(reply, 'agent');
                    
                    // 滚动到最新消息
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                }, 1000 + Math.random() * 1000);
            }
            
            // 添加消息到聊天窗口
            function addMessage(text, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('message');
                messageDiv.classList.add(sender === 'user' ? 'user-message' : 'agent-message');
                messageDiv.textContent = text;
                chatContainer.appendChild(messageDiv);
                
                // 滚动到最新消息
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
            
            // 获取AI回复
            function getAIResponse(message) {
                message = message.toLowerCase();
                
                // 检查是否有匹配的预定义回复
                for (const key in responses) {
                    if (message.includes(key.toLowerCase())) {
                        return responses[key];
                    }
                }
                
                // 默认回复
                const defaultResponses = [
                    '这是一个有趣的问题，但我需要更多信息才能给出准确的回答。',
                    '我目前还在学习阶段，可能无法完全理解您的问题。',
                    '您能换个方式问这个问题吗？我想更好地帮助您。',
                    '我主要专注于提供信息和解答问题，对于这个主题我可能了解有限。',
                    '感谢您的提问！我会继续学习以提供更好的帮助。'
                ];
                
                return defaultResponses[Math.floor(Math.random() * defaultResponses.length)];
            }
            
            // 重置对话
            function resetChat() {
                if (confirm('确定要重置对话吗？这将清除所有聊天记录。')) {
                    chatContainer.innerHTML = '<div class="message agent-message">您好！我是您的数字人智能体，很高兴为您服务。请问有什么可以帮助您的吗？</div>';
                }
            }
            
            // 语音功能模拟
            function toggleVoice() {
                alert('语音功能已激活！请说出您的指令。\n（注意：此为演示功能，实际语音识别需要后端支持）');
            }
            
            // 事件监听
            sendBtn.addEventListener('click', sendMessage);
            userInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
            
            voiceBtn.addEventListener('click', toggleVoice);
            resetBtn.addEventListener('click', resetChat);
        });
    </script>
</body>
</html>
